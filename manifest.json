{
  "manifest_version": 3,
  "name": "BetterLMS",
  "version": "1.1",
  "description": "Provides missing features in LMS like Dark Mode",
  "permissions": ["activeTab"],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BetterLMS",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.mydy.dypatil.edu/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
